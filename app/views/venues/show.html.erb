<div class="container mt-4">
  <div class="row mt-2 justify-content-md-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">
            <%= @venue.name%>,
            
            <small class="text-muted">
              <% if @venue.neighborhood.present? %>
          <%= @venue.neighborhood.name %>
        <% end %>
            </small>
          </h4>
        </div>
        
        <div class="card-body">
          <div id="location_map" style="height: 480px;"></div>
        </div>
        
        <ul class ="list-group">
          <li class="list-group-item list-group-item-success">
            Dishes you loved here
          </li>
          
          <% @venue.bookmarks.each do |bookmark| %>
        <li class="list-group-item">
          <a href="/venues/<%= @venue.id %>">
            <%= bookmark.dish.name %>
          </a>
          
          <div class="btn-group btn-group-xs float-right">
            
            <small class="text-muted">
              <% if bookmark.dish.present? %>
          about <%= time_ago_in_words(bookmark.created_at) %> ago
        <% end %>
              
            </small>
            
            <% if bookmark.dish.present? %>
            <a href="/bookmarks/<%= bookmark.id %>/edit">
              <i class="fa fa-fw fa-edit"></i>
            </a>
            <% end %>
            
            <% if bookmark.dish.present? %>
            <a href="/delete_bookmark/<%= bookmark.id %>" rel="nofollow">
              <i class="fa fa-fw fa-trash-o"></i>
            </a>
            <% end %>
            
          </div>
        </li>
      <% end %>


<li class="list-group-item">
  <form action="/create_bookmark" class="form-inline float left" method="post">
    <input name="authenticity_token" type="hidden" value="L7ZaToXIrQm5hzPYBC5cR9GnFc2KhIDrUWw5ScLO8V7XBkG652FgXtXigVs78D40cYNc3ZXLEBiqLWydDqI0ZQ==">
                <input type="hidden" name="user_id" value="<%= current_user.id %>">
                <input type="hidden" name="venue_id" value="<%= @bookmark.venue_id %>">
                <input type="hidden" name="dish_id" value="<%= @bookmark.dish_id %>">
                <input type="hidden" name="notes_id" value="<%= @bookmark.notes %>">
                
                <div class="form-group">
                    <%= select_tag("dish_id", options_from_collection_for_select(Dish.all, :id, :name), :class => "form-control") %>
              </div>
              <button class="btn btn-primary btn">
                <i class="fa fa-heart"></i>
              </button>
            </form>
            
            <small class="float-right text-muted">
              right now
            </small>
</li>

<li class="list-group-item list-group-item-success">
  Popular dishes here
</li>

<% @venue.specialties.each do |dish| %>
        <li class="list-group-item">
          <a href="/dishes/<%= dish.id %>">
            <%= dish.name %>
          </a>
        </li>
      <% end %>

<div class="card-footer text-center">
      <a href="/venues" class="btn btn-block btn-secondary">
        <i class="fa fa-chevron-left"></i>
      </a>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @venue.address_latitude %>,
        "lng": <%= @venue.address_longitude %>,
        "infowindow": "<h5><%= @venue.created_at %></h5><small><%= @venue.address_formatted_address %></small>"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>